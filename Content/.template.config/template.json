{
  "$schema": "http://json.schemastore.org/template",
  "author": "Thorsten Alpers",
  "classifications": [ "Web/ASP.NET" ],
  "identity": "NetNinja.Api.Template",
  "name": ".Net Core Api Template",
  "shortName": "coreapi",
  "sourceName": "NetCore.Api.Template",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "selectedApi": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "rest",
          "description": "A Rest API project."
        },
        {
          "choice": "graphql",
          "description": "A Graphql API project."
        },
        {
          "choice": "Both",
          "description": "REST and Graphql API projects."
        }
      ],
      "isRequired": "true",
      "description": "Choose the kind of Web API project"
    },
	"RestEnabled": {
      "type": "computed",
      "value": "(selectedApi == \"REST\" || selectedApi == \"Both\")"
    },
	"GraphqlEnabled": {
      "type": "computed",
      "value": "(selectedApi == \"graphql\" || selectedApi == \"Both\")"
    },
	// PortGraphql
    "PortGraphql": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port to use for HTTP endpoint in launchSettings.json. If not pass as paramter, a random generated port will set it."
    },
    "PortGraphqlGenerated": {
      "type": "generated",
      "generator": "port"
    },
    "PortGraphqlReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "PortGraphql",
        "fallbackVariableName": "PortGraphqlGenerated"
      },
      "replaces": "13000"
    },
	// PortRest
    "PortRest": {
      "type": "parameter",
      "datatype": "integer",
      "description": "Port to use for HTTP endpoint in launchSettings.json. If not pass as paramter, a random generated port will set it."
    },
    "PortRestGenerated": {
      "type": "generated",
      "generator": "port"
    },
    "PortRestReplacer": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "PortRest",
        "fallbackVariableName": "PortRestGenerated"
      },
      "replaces": "13000"
    },
	
	// replaces the existing port of the rest project in launchSettings.json
	"portRest": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": "14000"
      }, 
      "replaces": "14000"
    }
  },
  "sources": [
    {
      "modifiers": [      
        {
          "condition": "(!GraphqlEnabled)",
          "exclude": [
            "src/StarWars/**",
			"src/Web/GraphqlApi/**"
          ]
        },
		{
          "condition": "(!RestEnabled)",
          "exclude": [
			"src/Web/RestApi/**"
          ]
        }
      ]
    }
  ],
}